/*  Reset & Global Styles */
body {
  margin: 0;
  padding: 0;
  font-family: "Segoe UI", Roboto, Arial, sans-serif;
  background: #fefeff;
  color: #333;
}

h2, h3, h4, h5 {
  margin: 10px 0;
  color: #0c0881;
}

button {
  background: #3498db;
  color: white;
  border: none;
  padding: 8px 14px;
  border-radius: 6px;
  cursor: pointer;
  font-size: 14px;
  transition: all 0.2s ease-in-out;
}

button:hover {
  background: #bfcdd1;
}

button:disabled {
  background: #f8f5f5;
  cursor: not-allowed;
}

/* Sidebar Nav---*/
.sidebar {
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 200px;
  background: #434c7a;
  display: flex;
  flex-direction: column;
  padding: 20px 10px;
  box-shadow: 2px 0 6px rgba(0, 0, 0, 0.15);
}

.sidebar h2 {
  color: rgb(192, 225, 238);
  text-align: center;
  margin-bottom: 20px;
}

.sidebar button {
  background: linear-gradient(135deg, #3498db, #1abc9c); /* gradient like menu */
  color: white;
  text-align: center; /* center text */
  justify-content: space-between;
  padding: 9px 10px;
  border: none;
  border-radius: 8px;
  margin: 9px 0;
  font-size: 15px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.sidebar button:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 8px rgba(0,0,0,0.15);
  background: linear-gradient(135deg, #d7a994, #e3a4b8);
}


/* Main Content Area ---- */
.main-content {
  margin-left: 220px; /* push content aside */
  padding: 20px;
}

@media (max-width: 768px) {
  .sidebar {
    width: 160px;
  }

  .main-content {
    margin-left: 170px;
  }
}

/*  Forms */
form {
  margin-top: 16px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

form input,
form select {
  padding: 8px 10px;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 14px;
  width: 100%;
  box-sizing: border-box;
}

form button {
  align-self: flex-start;
}

/*Store Cards */
.store-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 15px;
  margin-top: 20px;
}

.store-card {
  background: white;
  border: 1px solid #eee;
  border-radius: 10px;
  padding: 16px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
}

.store-card strong {
  font-size: 16px;
  color: #2c3e50;
}

.store-card small {
  color: #777;
}

/* Rating buttons inside store cards */
.rating-buttons {
  margin-top: 10px;
}

.rating-buttons button {
  margin-right: 6px;
  padding: 5px 10px;
  font-size: 13px;
}

/* Dashboard Stats  */
.dashboard-stats {
  background-color: #5a8d9c;
  display: flex;
  gap: 20px;
  margin-top: 20px;
  flex-wrap: wrap;
}

.stat-card {
  flex: 1;
  min-width: 120px;
  background: white;
  border: 1px solid #eee;
  border-radius: 12px;
  padding: 20px;
  text-align: center;
  font-size: 15px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

.stat-card strong {
  display: block;
  font-size: 18px;
  color: #16a085;
}

/* Owner Dashboard  */
.owner-dashboard {
  margin-top: 40px;
}

.owner-card {
  background: white;
  border: 1px solid #eee;
  border-radius: 10px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
}

.owner-card h3 {
  margin: 0 0 6px;
  color: #020a12;
}

.owner-card p {
  margin: 90px 0;
  font-weight: bold;
  color: #120319;
}

.owner-card ul {
  margin: 10px 0 0;
  padding-left: 18px;
}

/*  Tables (Users List)  */
table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 14px;
  background: white;
  border-radius: 6px;
  overflow: hidden;
}

table thead {
  background: #34495e;
  color: white;
}

table th, table td {
  padding: 10px;
  border: 1px solid #eee;
  text-align: left;
}

table tr:nth-child(even) {
  background: #f5f5f5;
}

/* ------ Responsive Adjust --- */
@media (max-width: 768px) {
  .navbar {
    flex-direction: column;
  }

  .dashboard-stats {
    flex-direction: column;
  }

  .store-list {
    grid-template-columns: 1fr;
  }
}
/*  Menu Section  */
.menu-title {
  text-align: center;
  font-size: 24px;
  color: #2c3e50;
  margin: 20px 0 10px;
  letter-spacing: 1px;
}

.menu {
  display: flex;
  flex-direction: column; /* stack buttons vertically */
  align-items: center;    /* center buttons horizontally */
  gap: 12px;              /* space between buttons */
  margin-bottom: 30px;
}

.menu button {
  background: linear-gradient(150deg, #349edb, #1abc9c);
  color: white;
  padding: 10px 18px;
  font-size: 15px;
  border-radius: 8px;
  width: 180px;           /* optional: same width for all buttons */
  text-align: center;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.menu button:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 8px rgba(0,0,0,0.15);
  background: linear-gradient(135deg, #1abc9c, #3498db);
}

/*serach bar---------------*/
.search-bar form {
  display: flex !important;       /* force flex layout */
  flex-direction: row !important; /* ensure horizontal alignment */
  gap: 8px !important;            /* spacing between input and buttons */
  align-items: center !important; /* vertical alignment */
  flex-wrap: nowrap !important;   /* prevent wrapping */
  width: 100% !important;
}

.search-bar form input {
  flex: 1 !important;             /* input expands to fill space */
  min-width: 0 !important;        /* fix flex shrink issues */
  padding: 8px 12px !important;
  border-radius: 6px !important;
  border: 1px solid #ddd !important;
  font-size: 14px !important;
  outline: none !important;
}

.search-bar form button {
  display: inline-block !important;  /* force inline behavior */
  white-space: nowrap !important;    /* prevent wrapping */
  padding: 8px 14px !important;
  font-size: 14px !important;
  border-radius: 6px !important;
  border: none !important;
  cursor: pointer !important;
  color: white !important;
  background: linear-gradient(135deg, #3498db, #1abc9c) !important;
  transition: all 0.3s ease !important;
}

.search-bar form button:hover {
  background: linear-gradient(135deg, #1abc9c, #3498db) !important;
}
/* stores  */
  /* Highlight current active menu button */
.menu button.active,
.sidebar button.active {
  background: linear-gradient(135deg, #e7e6ec, #afb1e4);
  color: white;
  font-weight: bold;
  box-shadow: 0 6px 10px rgba(0,0,0,0.15);
}
/* Admin Dashboard Load button */
.admin-load-btn {
  padding: 10px 20px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-size: 16px;
  font-weight: bold;
  transition: background 0.3s;
}

.admin-load-btn:hover {
  background-color: #45a049;
}

/* Admin Dashboard stats container */
.admin-stats-container {
  display: flex;
  gap: 20px;
  margin-top: 30px;
  flex-wrap: wrap;
}

/* Admin Dashboard card base */
.admin-card {
  flex: 1;
  min-width: 200px;
  padding: 20px;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  color: white;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

/* Individual cards with gradients */
.admin-card.users {
  background: linear-gradient(50deg, #42a5f5, #f7f8f9);
}

.admin-card.stores {
  background: linear-gradient(50deg,  #42a5f5, #f7f8f9);
}

.admin-card.ratings {
  background: linear-gradient(50deg,  #42a5f5, #f7f8f9);
}

/* Card headings */
.admin-card h3 {
  margin: 0 0 10px 0;
  font-size: 18px;
}

/* Card numbers */
.admin-card .stat-number {
  font-size: 24px;
  font-weight: bold;
}


